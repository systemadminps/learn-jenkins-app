pipeline {
    agent any
    
    stages{
            
        stage('build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true 
                }
            }
            steps {
                sh '''
                    ls -la 
                    node --version 
                    npm --version 
                    npm ci 
                    npm run build  

                '''
            }
        }


        stage('test') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true 
                }
            }
            steps {
                sh '''
                    test -f build/index.html
                    npm test
                    ls -la 
                    pwd 
                '''
            }
        } 

        stage('E2E') {
            agent {
                docker {
                    image 'mcr.microsoft.com/playwright:v1.55.0-noble'
                    reuseNode true 
                }
            }
            steps {
                sh '''
                    npm install -g serve 
                    serve -s build &
                    sleep 10
                    npx playwright test 
                '''
            }
        } 

    }
    post{
        always {
            junit '**/test-results/*.xml'
        }
    }
}

