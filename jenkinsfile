pipeline {
    agent any

    stages {
        agent {
            docker {
                image 'node:18-apline'
                reuseNode true 
            }
        }
        stage('build') {
            steps {
                sh '''
                    ls -la 
                    node --version 
                    npm --version 
                    npm ci 
                    npm run build  
                    ls -la
                '''
            }
        }
    }
}
